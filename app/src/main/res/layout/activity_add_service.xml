<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddServiceActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Dịch Vụ"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtServiceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên Dịch Vụ"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"/>

    <EditText
        android:id="@+id/edtServiceDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mô Tả"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtServiceName"/>

    <EditText
        android:id="@+id/edtServicePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Giá (VND)"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:inputType="number"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtServiceDesc"/>

    <EditText
        android:id="@+id/edtServiceImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="URL Hình Ảnh"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtServicePrice"/>

    <Button
        android:id="@+id/btnAddService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thêm Dịch Vụ"
        android:textColor="@android:color/white"
        android:background="@color/success"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtServiceImage"
        android:paddingVertical="12dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
